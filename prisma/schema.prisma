// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-js-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @unique @default(uuid())
  full_name  String
  email      String   @unique
  password   String
  cpf        String   @unique
  cnh        String   @unique
  is_admin   Boolean
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  Vehicles Vehicles[]
  Process  Process[]

  @@map("users")
}

model Vehicles {
  id            String   @id @unique @default(uuid())
  id_user       String
  vehicle_state String
  license_plate String   @unique
  renavam       String   @unique
  model         String
  year          Int
  brand         String
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt

  user Users @relation(fields: [id_user], references: [id])

  Process Process[]
  Bills   Bills[]

  @@map("vehicles")
}

model Process {
  id              String   @id @unique @default(uuid())
  ait             String   @unique
  infraction_date String
  description     String
  code            String   @unique
  code_ctb        String
  infraction_uf   String
  price           Float
  id_vehicle      String
  process_status  String
  finished        Boolean
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  vehicle Vehicles @relation(fields: [id_vehicle], references: [id])

  Users   Users?  @relation(fields: [usersId], references: [id])
  usersId String?

  @@map("process")
}

model Bills {
  id          String   @id @unique @default(uuid())
  auto        String
  data_hora   DateTime
  price       Float
  type        String
  city        String
  address     String
  description String
  cnh_points  Int
  severity    String
  id_vehicle  String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  vehicle Vehicles @relation(fields: [id_vehicle], references: [id])

  @@map("bills")
}
